    description: 'Reflections, milestones, and personal growth.',
    href: `${base}/life`,
    icon: 'ğŸŒ±',
    active: false,
  },
];
---

<BaseLayout title="Vatika's Journal">
  <h1>Journal</h1>
  <p class="muted" style="max-width: 62ch;">
    A collection of personal journals â€” thoughts, experiences, and memories I want to remember.
  </p>

  <div style="display: grid; gap: 16px; margin-top: 28px;">
    {journals.map((journal) => (
      <a
        href={journal.active ? journal.href : undefined}
        class={`card journal-card ${!journal.active ? 'coming-soon' : ''}`}
        style={`text-decoration: none; color: inherit; display: flex; align-items: center; gap: 18px; ${!journal.active ? 'opacity: 0.5; cursor: default;' : ''}`}
      >
        <div class="journal-icon" style="font-size: 32px;">{journal.icon}</div>
        <div>
          <h2 style="margin: 0; font-size: 22px;">
            {journal.title}
            {!journal.active && <span style="font-size: 12px; color: var(--muted); margin-left: 8px; font-weight: normal;">(coming soon)</span>}
          </h2>
          <p class="muted" style="margin: 4px 0 0; font-size: 15px;">{journal.description}</p>
        </div>
      </a>
    ))}
  </div>
</BaseLayout>

<style>
  .journal-card:not(.coming-soon):hover {
    transform: translateY(-2px);
  }

  .journal-card.coming-soon {
    pointer-events: none;
  }
</style>
