---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const journals = [
  {
    title: 'Reading',
    description: 'Notes on books I\'ve read â€” for readers, dreamers, and future-me.',
    href: `${base}/reading`,
    icon: 'ğŸ“š',
    active: true,
  },
  {
    title: 'Trips',
    description: 'Adventures and places I\'ve explored around the world.',
    href: `${base}/trips`,
    icon: 'âœˆï¸',
    active: false,
  },
  {
    title: 'Experiences',
    description: 'Memorable moments, events, and things I\'ve tried.',
    href: `${base}/experiences`,
    icon: 'ğŸ­',
    active: false,
  },
  {
