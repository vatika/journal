---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title ?? "Reading Journal"}</title>

    <style is:global>
      :root {
        --bg: #faf9f6;
        --card: #ffffff;
        --text: #222;
        --muted: #666;
        --border: #e8e6e1;
        --accent: #3a5a40;
      }

      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
      }

      .container {
        max-width: 900px;
        margin: 60px auto;
        padding: 0 20px;
      }

      header.nav {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
        align-items: center;
      }

      header.nav a {
        text-decoration: none;
        color: var(--muted);
      }

      header.nav a.brand {
        margin-right: auto;
        font-weight: 700;
        color: var(--text);
      }

      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 16px;
      }

      .muted { color: var(--muted); }

      .stars {
        letter-spacing: 2px;
        color: #e0a800;
        font-size: 14px;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <header class="nav">
        <a href="/" class="brand">Your Name</a>
        <a href="/books">Books</a>
        <a href="/recommendations">Recommendations</a>
      </header>

      <slot />
    </div>
  </body>
</html>
